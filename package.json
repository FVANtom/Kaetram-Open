{
    "name": "spiritsofterra",
    "version": "0.0.1",
    "private": true,
    "packageManager": "yarn@3.2.1",
    "author": "FVANtom",
    "description": "",
    "homepage": "https://spiritsofterra.com/",
    "scripts": {
        "postinstall": "husky install",
        "packages": "yarn workspaces foreach --no-private -j 3 -piv run",
        "dev": "yarn packages dev",
        "dev:server": "yarn workspace @kaetram/server dev",
        "dev:client": "yarn workspace @kaetram/client dev",
        "hub": "yarn packages hub",
        "start": "yarn packages start",
        "start:server": "yarn workspace @kaetram/server start",
        "start:client": "yarn workspace @kaetram/client start",
        "build": "yarn packages build",
        "build:server": "yarn workspace @kaetram/server build",
        "build:client": "yarn workspace @kaetram/client build",
        "lint:js": "eslint packages/**/*.ts --ignore-path .gitignore",
        "lint:style": "stylelint packages/**/*.scss --ignore-path .gitignore",
        "lint:fix": "yarn lint:js --fix && yarn lint:style --fix",
        "lint": "yarn lint:js && yarn lint:style",
        "test": "yarn packages test",
        "helper": "yarn packages helper",
        "map": "yarn packages map"
    },
    "lint-staged": {
        "*.ts": "eslint --cache --fix",
        "*.scss": "stylelint --cache --fix"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "eslint": "^8.12.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prefer-let": "^3.0.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-unicorn": "^42.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.7",
        "postcss": "^8.4.12",
        "postcss-value-parser": "^4.2.0",
        "prettier": "^2.6.2",
        "stylelint": "^14.6.1",
        "typescript": "^4.6.3"
    },
    "workspaces": [
        "packages/*"
    ],
    "engines": {
        "node": "^17.8.0"
    },
    "repository": "git+https://github.com/Kaetram/Kaetram-Open.git",
    "bugs": {
        "url": "https://github.com/Kaetram/Kaetram-Open/issues"
    },
    "keywords": [
        "2d",
        "2d-game",
        "browserquest",
        "demo",
        "game",
        "game-2d",
        "game-development",
        "game-engine",
        "game-server",
        "gamedev",
        "html5",
        "html5-canvas",
        "html5-game",
        "mmo",
        "multiplayer",
        "open-source",
        "region",
        "rendering-engine",
        "taptapadventure",
        "tileset"
    ]
}
